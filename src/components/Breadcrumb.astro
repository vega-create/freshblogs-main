---
import { siteConfig } from '../site.config';

interface BreadcrumbItem {
  name: string;
  url?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

const allItems = [{ name: 'Home', url: '/' }, ...items];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: allItems.map((item, index) => ({
    '@type': 'ListItem',
    position: index + 1,
    name: item.name,
    ...(item.url ? { item: new URL(item.url, siteConfig.url).href } : {}),
  })),
};
---

<nav aria-label="Breadcrumb" class="text-sm text-gray-500 mb-6">
  <ol class="flex flex-wrap items-center gap-1">
    {allItems.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && <span class="mx-2 text-gray-300">/</span>}
        {item.url ? (
          <a href={item.url} class="hover:text-primary-600 transition-colors">{item.name}</a>
        ) : (
          <span class="text-gray-800 font-medium">{item.name}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
