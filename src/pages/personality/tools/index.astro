---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CrossSiteLinks from '../../../components/CrossSiteLinks.astro';
import { siteConfig } from '../../../../site.config';

const title = 'Free Personality Tools';
const description = 'MBTI quiz, love language test, and Enneagram assessment';
const tools = [
  { name: 'MBTI Personality Quiz', emoji: 'üß†', path: 'mbti', desc: 'Discover your Myers-Briggs type' },
  { name: 'Love Language Quiz', emoji: '‚ù§Ô∏è', path: 'love-language', desc: 'Find your primary love language' },
  { name: 'Enneagram Test', emoji: 'üî¢', path: 'enneagram', desc: 'Discover your Enneagram type (1-9)' },
];
const breadcrumbLd = { '@context': 'https://schema.org', '@type': 'BreadcrumbList', itemListElement: [
  { '@type': 'ListItem', position: 1, name: 'Home', item: siteConfig.url },
  { '@type': 'ListItem', position: 2, name: 'Personality', item: `${siteConfig.url}/personality/` },
  { '@type': 'ListItem', position: 3, name: 'Tools', item: `${siteConfig.url}/personality/tools/` },
]};
---
<BaseLayout title={title} description={description} jsonLd={breadcrumbLd}>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-400 mb-8"><a href="/" class="hover:text-white">Home</a><span class="mx-2">/</span><a href="/personality/" class="hover:text-white">Personality</a><span class="mx-2">/</span><span class="text-white">Tools</span></nav>
    <div class="text-center mb-10"><h1 class="text-3xl md:text-4xl font-display font-bold mb-3">üõ†Ô∏è {title}</h1><p class="text-gray-400">{description}</p></div>
    <div class="grid sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a href={`/personality/tools/${tool.path}/`} class="group flex items-center gap-4 p-5 bg-white/5 hover:bg-white/10 border border-white/10 hover:border-purple-500/30 rounded-xl transition-all duration-300 hover:-translate-y-0.5">
          <span class="text-3xl">{tool.emoji}</span>
          <div><h2 class="font-bold text-white group-hover:text-purple-400 transition-colors">{tool.name}</h2><p class="text-sm text-gray-400">{tool.desc}</p></div>
        </a>
      ))}
    </div>
    <CrossSiteLinks currentSite="personality" />
  </div>
</BaseLayout>
