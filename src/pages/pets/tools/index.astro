---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CrossSiteLinks from '../../../components/CrossSiteLinks.astro';
import { siteConfig } from '../../../../site.config';
const title = 'Free Pet Tools';
const description = 'Pet matching, name generator, and breed guide for pet lovers';
const tools = [
    { name: 'Pet Match Quiz', emoji: 'ğŸ¾', path: 'pet-match', desc: 'Find your perfect pet match' },
    { name: 'Pet Name Generator', emoji: 'ğŸ·ï¸', path: 'name-generator', desc: 'Find the perfect pet name' },
    { name: 'Breed Info Guide', emoji: 'ğŸ“‹', path: 'breed-guide', desc: 'Browse popular dog and cat breeds' }
  ];
const breadcrumbLd = { '@context': 'https://schema.org', '@type': 'BreadcrumbList', itemListElement: [
  { '@type': 'ListItem', position: 1, name: 'Home', item: siteConfig.url },
  { '@type': 'ListItem', position: 2, name: 'Pets', item: `${siteConfig.url}/pets/` },
  { '@type': 'ListItem', position: 3, name: 'Tools', item: `${siteConfig.url}/pets/tools/` },
]};
---
<BaseLayout title={title} description={description} jsonLd={breadcrumbLd}>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <nav class="text-sm text-gray-400 mb-8"><a href="/" class="hover:text-white">Home</a><span class="mx-2">/</span><a href="/pets/" class="hover:text-white">Pets</a><span class="mx-2">/</span><span class="text-white">Tools</span></nav>
    <div class="text-center mb-10"><h1 class="text-3xl md:text-4xl font-display font-bold mb-3">ğŸ› ï¸ {title}</h1><p class="text-gray-400">{description}</p></div>
    <div class="grid sm:grid-cols-2 gap-4">
      {tools.map((tool) => (
        <a href={`/pets/tools/${tool.path}/`} class="group flex items-center gap-4 p-5 bg-white/5 hover:bg-white/10 border border-white/10 hover:border-purple-500/30 rounded-xl transition-all duration-300 hover:-translate-y-0.5">
          <span class="text-3xl">{tool.emoji}</span>
          <div><h2 class="font-bold text-white group-hover:text-purple-400 transition-colors">{tool.name}</h2><p class="text-sm text-gray-400">{tool.desc}</p></div>
        </a>
      ))}
    </div>
    <CrossSiteLinks currentSite="pets" />
  </div>
</BaseLayout>
